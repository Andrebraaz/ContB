<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Status do Servidor</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .status {
      position: absolute;
      top: 10px;
      left: 10px;
      font-size: 24px;
      font-weight: bold;
    }
    .online {
      color: green;
    }
    .offline {
      color: red;
    }
  </style>
</head>
<body>
  <div id="server-status" class="status">Verificando...</div>

  <script>
    async function checkServer() {
      const statusDiv = document.getElementById("server-status");
      const startTime = Date.now();

      try {
        // Simula um "ping" enviando uma requisição GET para o servidor
        await fetch("https://sip.syma.com.br", { method: "GET", mode: "no-cors" });
        const latency = Date.now() - startTime;

        statusDiv.textContent = `Telefone está ONLINE. Latência: ${latency} ms`;
        statusDiv.className = "status online";
      } catch (error) {
        statusDiv.textContent = "Telefone está OFFLINE.";
        statusDiv.className = "status offline";
      }
    }

    checkServer();
  </script>
</body>
</html>
